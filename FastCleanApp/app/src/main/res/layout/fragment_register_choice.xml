<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginTop="200sp"
    android:layout_marginHorizontal="20dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Fragments.Registo.RegisterChoiceFragment"
    android:background="@drawable/shape_rounded_fragment">

    <TextView
        android:id="@+id/textView20"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:text="Para efectuar o registo: "/>

    <Button
        android:id="@+id/bt_worker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#80d6ff"
        android:text="Site" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:id="@+id/btReturn"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"/>

</LinearLayout>