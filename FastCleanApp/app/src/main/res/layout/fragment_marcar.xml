<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="150dp"
    android:layout_marginHorizontal="20dp"
    tools:context="com.example.fastclean.Fragments.MarcarFragment"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/shape_rounded_fragment">

    <Button
        android:id="@+id/btAgora"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#91b6f2"
        android:text="Agora" />

    <Button
        android:id="@+id/btAgendar"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:backgroundTint="#91b6f2"
        android:text="Agendar Hora" />

</LinearLayout>