<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Perfil.ClientProfileFragment"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/shape_background_image">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="350dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_definicoes"
                android:id="@+id/btEdit"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="614dp"
                android:layout_marginTop="90dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#0e60e6"
                    android:textSize="30dp"
                    android:id="@+id/nomeUser"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160dp"
                    android:id="@+id/ruaUser"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="346dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    app:cardBackgroundColor="#91b6f2"
                    app:cardCornerRadius="10dp">

                    <RatingBar
                        android:id="@+id/ratingBarCliente"
                        android:layout_width="244dp"
                        android:layout_height="49dp"
                        android:layout_marginStart="50dp"
                        android:clickable="true"
                        android:numStars="5"
                        android:scaleX="0.5"
                        android:scaleY="0.5"
                        app:layout_constraintStart_toStartOf="@+id/view"
                        app:layout_constraintTop_toTopOf="parent"
                        android:isIndicator="true"
                        />


                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Reviews"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:paddingRight="20dp"/>

                    <Spinner
                        android:layout_marginLeft="130dp"
                        android:id="@+id/time_cliente_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp" />


                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_Review"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:backgroundTint="#e6e6e6"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="-690dp"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:id="@+id/profilePic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>